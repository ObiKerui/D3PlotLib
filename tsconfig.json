{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es2015",
        "allowJs": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react",
        "paths": {
            "node_modules/*": ["*"]
        },
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
        "userApp/**/*", "D3PlotLib/**/*", "types/**/*"
    ],
    "exclude": [
        "buildtools/**/*"
    ]
}