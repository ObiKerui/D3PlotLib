{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": ["airbnb", "prettier", "plugin:jest/recommended"],
    "overrides": [],
    "plugins": ["prettier", "jest"],
    "rules": {
        "prettier/prettier": ["error"],
        "max-len": [1, 70, 2, { "ignoreComments": true} ]
    },
    "ignorePatterns": [
        "**/webpack.*",
        "**/buildtools/*", 
        "tsconfig.*", 
        "**/node_modules/*.js"
    ]
}
